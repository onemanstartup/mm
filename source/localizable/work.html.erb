<div id="container">
  <%= partial "/partials/lang_switch" %>
  <%= partial "/partials/navigation" %>


  <div id="content">
    <div class="post">
      <%#<h2>Works</h2>%>
    </div>
    <%#<ul id="gallery">%>
    <div class="viewport jcarousel">
      <ul class="overview" id="carousel">
      
      <% @works_array.reverse.each_with_index do |work, index| %>
        <%#<div class="photo-wrapper">%>
          <%#<div class="photo-tape"> </div>%>
          <li>   
        <a href="works/<%= @works_array.length - index - 1  %>.html" class="gallery_img_next">
          <%#<span class="photo-span">%>
            <img src='/images/works/pre_<%= work.images.first[:image_name]  %>' class="gal_img" >
          <%#</span>%>


      </a>
      <span class="view_icon bot"> View </span>

             <span class="title bot"> 
        <% if I18n.t(:lang) == "en" %>
          <%= work.title %>
      <% else %>
          <%= work.ru_title %>
        <% end %>
          </span>
    </li>
       <%#</div>%>


   <% end %>
 </ul>
 </div>
    <div class="post">

    </div>
  </div>
</div>


<div id="viewport">
  <div id="wall"></div>
</div>

