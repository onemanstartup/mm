<div id="container">

  <div id="content">
    <div class="work_post">
      <% @works_array.reverse.each_with_index do |work, index| %>
        <%#<div class="photo-wrapper">%>
          <%#<div class="photo-tape"> </div>%>
          <div class="cari" style="max-width:<%= work.preview[:width] %>px">   
            <a href="works/<%= @works_array.length - index - 1  %>.html" class="gallery_img_next"
              data-image="<%= work.images.first[:image_name]%>"
               data-width="<%= work.images.first[:width] %>" data-height="<%= work.images.first[:height] %>" 
                data-image-name="<%= work.images.first[:image_name] %>" data-axis="<%= work.images.first[:axis] %>"
                data-letter-box-type="<%= work.images.first[:letter_box_type]%>"
                 data-range-row="<%= work.images.first[:range_row]%>"
                 data-range-col="<%= work.images.first[:range_col]%>"
                 data-index="<%= @works_array.length - index%>">
          <%#<span class="photo-span">%>
            <img src='/images/works/<%= work.preview[:image_name]  %>' class="gal_img" >
          <%#</span>%>

      <div class="bottomt">
        <span class="number">
          – No. 00<%=@works_array.length - index%> –
        </span>
             <span class="title bot"> 
        <% if I18n.t(:lang) == "en" %>
          <%= work.title %>
      <% else %>
          <%= work.ru_title %>
        <% end %>
          </span>
      </div>
      </a>
    </div>
       <%#</div>%>
   <% end %>
 </div>

