  <div class="row-fluid">
    <div class="span2">
      <!--Sidebar content-->
    </div>
    <div class="span10">
  
  <form class="form-stacked" action="<%= url("/page/create") %>" method="POST">
        <h3><span style="font-weight: normal">Creating new page</span></h3>
        <p>
        <label>Category</label>
        <input class="span5" type="text" name="page[category]">
        <label>Title</label>
        <input class="span5" type="text" name="page[title]">
        <label>Body</label>
        <textarea class="xxlarge" style="margin: 0.5em 0;" rows="3" name="page[body]"></textarea>
        <label>Name(permalink)</label>
          <input class="span5" type="text" name="page[name]">
        </p>
    
    <div class="actions">
      <div style="display: inline-block;">
        <input class="btn" type="submit" value="Save" />
      </div>
      <div style="display: inline-block; margin: 0 0 0 1em;">
        <a class="cancel" style="color: #9d261d;" href="<%= url('/') %>">Cancel</a>
      </div>
    </div>
  </form>

</div>
  </div>

<script>
  $('.cancel').click(function() {
    return confirm("Cancel?");
  })
</script>


