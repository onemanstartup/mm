<div class="content">

  <div style="margin: 60px 0 20px 5px;">
  </div>
  
  <form class="form-stacked" action="<%= url("/page/create") %>" method="POST">
      <label>
        <h3><span style="font-weight: normal">Creating new page</span></h3>
        <p>
          <textarea class="xxlarge" style="margin: 0.5em 0;" rows="3" name="page[category]"></textarea>
          <textarea class="xxlarge" style="margin: 0.5em 0;" rows="3" name="page[title]"></textarea>
          <textarea class="xxlarge" style="margin: 0.5em 0;" rows="3" name="page[body]"></textarea>
          <textarea class="xxlarge" style="margin: 0.5em 0;" rows="3" name="page[name]"></textarea>
        
          <span class="help-block">
            Creating new page
          </span>
        </p>
      </label>
    
    <div class="actions">
      <div style="display: inline-block;">
        <input class="btn" type="submit" value="Save" />
      </div>
      <div style="display: inline-block; margin: 0 0 0 1em;">
        <a class="cancel" style="color: #9d261d;" href="<%= url('/') %>">Cancel</a>
      </div>
    </div>
  </form>

</div>

<script>
  $('.cancel').click(function() {
    return confirm("Cancel?");
  })
</script>


