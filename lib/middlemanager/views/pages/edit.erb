<div class="sidebar">
</div>

<div class="content">

  <div style="margin: 60px 0 20px 5px;">
  </div>
  
  <form class="form-stacked" action="<%= url("/page?key=#{@splat}") %>" method="POST">
    <% for page in @pages %>
      <%= page.store_key %>
      
      <label>
        <h3><span style="font-weight: normal">Editing</span> <%= page.name %></h3>
        <p>
          <textarea class="xxlarge" style="margin: 0.5em 0;" rows="3" name="page[value]"><%= page.value %></textarea>
          <textarea class="xxlarge" style="margin: 0.5em 0;" rows="3" name="page[title]"><%= page.title %></textarea>
        
          <span class="help-block">
            Content will be entered for <b><%= page.category %></b> on <code><%= page.category %></code> <b>(<%= page.title %>)</b>
          </span>
        </p>
      </label>
    <% end %>
    
    <div class="actions">
      <div style="display: inline-block;">
        <input class="btn" type="submit" value="Save" />
      </div>
      <div style="display: inline-block; margin: 0 0 0 1em;">
        <a class="cancel" style="color: #9d261d;" href="<%= url('/') %>">Cancel</a>
      </div>
    </div>
  </form>

</div>

<script>
  $('.cancel').click(function() {
    return confirm("Cancel?");
  })
</script>

